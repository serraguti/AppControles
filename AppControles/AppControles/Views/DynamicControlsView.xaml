<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControles.Views.DynamicControlsView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Controles dinámicos"
                FontSize="35" TextColor="Blue"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="cajaNumero"
                   Placeholder="Número de botones..."/>
            <Button x:Name="botonGenerar"
                    TextColor="Red"
                    Text="Generar botones"/>
            <ScrollView Orientation="Horizontal">
                <StackLayout Orientation="Horizontal"
                         x:Name="containerHorizontal"
                         BackgroundColor="Red"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand">
                </StackLayout>
            </ScrollView>
            <ScrollView Orientation="Vertical">
                <StackLayout Orientation="Vertical"
                         BackgroundColor="GreenYellow"
                         x:Name="contenedor"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand">
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>