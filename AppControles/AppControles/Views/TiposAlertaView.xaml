<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControles.Views.TiposAlertaView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Tipos Alerta Xamarin"
                   FontSize="40" TextColor="Red"
                VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
            <Button Text="Alerta simple" x:Name="botonSimple"
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Alerta OK/Cancel" x:Name="botonOkCancel"
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Alerta opciones" x:Name="botonOpciones"
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Ventana Modal" x:Name="botonModal"
                    HorizontalOptions="FillAndExpand"/>
            <Label FontSize="35" TextColor="Blue" 
                   x:Name="labelRespuesta"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>