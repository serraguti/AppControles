<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControles.Views.PageControlPicker">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Control Picker"
                   FontSize="35"
                    HorizontalOptions="CenterAndExpand" />
            <Picker x:Name="pickerOpciones"
                    Title="Seleccione una opción"/>
            <Label x:Name="labelSeleccionado"
                   FontSize="25"
                   TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>